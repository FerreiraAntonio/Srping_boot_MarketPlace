public class Testando {

	public static void main(String[] args) {
		
	
	System.out.println(GetSum(-1,0));
		
	}
   
	public static int GetSum(int a, int b) {
	   int g=1;
		if(a<0 && b !=0) {
		for(int i =1; i<b; i++) {
		g+=(i+1);
		
 } System.out.println(g);
		b=g;}
	
		if(a != b) { return a+b;}
		else{ return a;}		
			
		
		}  }
